<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".ui.menuactivity.MenuActivity">

    <TextView
        android:id="@+id/tv_get_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        android:textSize="@dimen/_24ssp"
        android:fontFamily="@font/pixelated_font"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:hint="Hi Player"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:text="@string/text_choose"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:fontFamily="@font/pixelated_font"
        android:textAlignment="center"
        android:textSize="@dimen/_20ssp"/>

    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_comp"
        android:text="@string/text_desc_player_1"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:fontFamily="@font/pixelated_font"
        android:textAlignment="center"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_30sdp"/>

    <TextView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_comp"
        android:text="@string/text_desc_player_2"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:fontFamily="@font/pixelated_font"
        android:textAlignment="center"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_30sdp"/>

    <ImageView
        android:id="@+id/iv_comp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/ic_vs_computer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_marginLeft="@dimen/_30sdp"/>

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/ic_vs_player"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_marginRight="@dimen/_30sdp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

</androidx.constraintlayout.widget.ConstraintLayout>